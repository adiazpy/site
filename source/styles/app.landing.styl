body
  > section
    &.landing
      background-image: url("/assets/img/background.jpg")
      background-size: cover !important
      background-opacity: 0.5
      background-position: 0 100%
      color: WHITE
      &:not(.scroll)
        -webkit-filter: grayscale(100%)
        -moz-filter: grayscale(100%)
        -ms-filter: grayscale(100%);
        -o-filter: grayscale(100%)
        filter: grayscale(100%)
      &.scroll
        figure.glass
          background-color: rgba(0,0,0,0.5)

      figure.glass
        position: absolute
        left: 0
        width: 100%
        height: 100%
        background-color: rgba(0,0,0,0.0)
        transition background (2 * ANIMATION_DURATION) ANIMATION_EASE

      .wrapper
        padding: 0
        display: flex
        flex-direction column
        justify-content center
        align-content center
        align-items center
        transition opacity (4 * ANIMATION_DURATION) ANIMATION_EASE
        h1
          margin-top: SPACE
          font-weight: FONT_WEIGHT_BOLD !important
        small
          margin-bottom: SPACE
          display: block
          font-weight: FONT_WEIGHT_BOLD
          font-size: FONT_SIZE_BIG
        .icon
          display: inline-block
          margin: 0 SPACE
          width: SIZE = 2.25rem
          height: SIZE
          font-size: SIZE
          color: WHITE
          opacity: 0.85
          transition all ANIMATION_DURATION ANIMATION_EASE
          &:hover
            opacity: 1
            transform: scale(1.25)
          &.tapquo
            background-image: url("/assets/img/logo_tapquo.png")
            background-size: cover

        .more
          position: absolute
          bottom: 0
          left: 0
          right: 0
          font-weight: FONT_WEIGHT_NORMAL
          transition all (2 * ANIMATION_DURATION) ANIMATION_EASE
          opacity: 0.6
          &.hide
            opacity: 0

    &.bck.green
      h3
        font-weight: FONT_WEIGHT_NORMAL
        color: rgba(0,0,0,0.2) !important

    nav.list
      > a
        display: block
        margin: (SPACE) 0
        opacity: 0.85
        span
          margin-left: (SPACE / 2)
          padding: (SPACE / 4) (SPACE / 3) (SPACE / 10) (SPACE / 3)
          font-size: (FONT_SIZE_TINY / 1.4)
          font-weight: FONT_WEIGHT_BOLD
          line-height: (FONT_SIZE_TINY / 1.4)
          text-transform: uppercase
          vertical-align: middle
          border-radius: .25rem
          opacity: 0.75
          border: solid .15rem
        &:hover
          &, & span
            opacity: 1


    &.bck.green nav.list > a
      span
        border-color: WHITE
      &:hover span
        background-color: WHITE
        color: GREEN

    &.bck.grey nav.list > a
      span
        border-color: COLOR
      &:hover span
        background-color: COLOR
        color: WHITE

  > nav
    background-image: url("/assets/img/background.jpg")
    background-size: cover
    background-position: 0 75%
    > a
      display: inline-block
      padding: (UNIT / 1.5) 0
      width: 100%
      font-size: 1.75rem
      color: rgba(255,255,255,0.75) !important
      background-color: rgba(0,0,0,0.5)
      span
        margin: 0 (SPACE / 2.5)
        font-style: italic
        color: WHITE
