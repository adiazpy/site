body
  GHOST = 0.25
  > section
    position                              : relative
    height                                : 100vh
    h1
      font-size                           : (2.5 * UNIT)
    h1, h2
      font-weight                         : FONT_WEIGHT_BOLD
      &:before
        content                           : "<"
      &:after
        content                           : ">"
      &:before, &:after
        opacity                           : GHOST
    p
      opacity                             : (3 * GHOST)
    & [data-column="6"]
      margin                              : 0 !important
      height                              : 100%
      width                               : 50%
      &[data-flex="vertical center"]
        padding                           : (2 * UNIT)
        text-align                        : center
      > .bck
        width                             : 100%
        height                            : 100%

    // -- Products -------------------------------------------------------------
    .products
      > *
        margin                            : 0 !important
        width                             : 33.33%
        height                            : 25vh
        text-align                        : center
        list-style                        : none
        overflow                          : hidden
        transition                          background ANIMATION_DURATION
        &:nth-child(odd)
          background-color                : rgba(0,0,0,0.05)
        > *
          transition                        all ANIMATION_DURATION
          padding                         : 0 SPACE
          &:not(strong)
            display                       : none
            opacity                       : 0
        > strong
          display                         : block
          margin-bottom                   : 0
          font-size                       : HEIGHT = (UNIT / 1.5)
          line-height                     : (1.2 * HEIGHT)
        span
          display                         : inline-block
          margin                          : 0 (SPACE / 4)
          padding                         : 0 (SPACE / 2)
          font-size                       : 11px
          font-weight                     : FONT_WEIGHT_NORMAL
          border-radius                   : .25rem
          background-color                : rgba(0,0,0,0.25)
          opacity                         : 0.9
        > small
          margin-top                      : (SPACE / 4)
        &:hover
          background-color                : alpha(THEME, 0.5)
          > *:not(strong)
            display                       : block
            opacity                       : 1
          > strong
            font-size                     : HEIGHT = (UNIT / 2)
            line-height                   : (1.2 * HEIGHT)
      &.books > *
        height                            : 100vh

    &.landing
      > *
        transition                          all ANIMATION_DURATION ANIMATION_EASE
        &.hide
          opacity                         : 0 !important
          transform                         scale(0.9)
      > h1
        margin-bottom                     : (UNIT / 4)
      > h4
        margin-bottom                     : (UNIT / 3.5)
      > nav > a
        margin                            : 0 (SPACE / 1.25)
        width                             : SIZE = (UNIT / 1.5)
        height                            : SIZE
        font-size                         : SIZE
        opacity                           : (2 * GHOST)
        transition                          opacity ANIMATION_DURATION ANIMATION_EASE
        &:hover
          opacity                         : 1
      > .more
        position                          : absolute
        bottom                            : SPACE
        left                              : 0
        right                             : 0
        font-weight                       : FONT_WEIGHT_NORMAL
        opacity                           : GHOST
        transition                          all (2 * ANIMATION_DURATION) ANIMATION_EASE

    footer
      position                              : absolute
      bottom                                : SPACE
      left                                  : 50%
      width                                 : 50%
      font-size                             : 12px
      &, > a
        color                               : rgba(255,255,255,0.4)
      > a
        font-size                           : 110%
        &:hover
          color                             : WHITE
