body
  > section
    &.landing
      background-image: url("/img/background_color.jpg")
      background-size: cover !important
      background-opacity: 0.5
      background-position: 0 100%
      color: WHITE
      figure.glass
        position: absolute
        left: 0
        width: 100%
        height: 100%
        background-color: rgba(0,0,0,0.5)
        transition opacity (2 * ANIMATION_DURATION) ANIMATION_EASE
      .wrapper
        padding: 0
        display: flex
        flex-direction column
        justify-content center
        align-content center
        align-items center
        transition opacity (2 * ANIMATION_DURATION) ANIMATION_EASE
        h1
          margin-top: SPACE
          font-weight: FONT_WEIGHT_BOLD !important
        small
          display: block
          font-size: FONT_SIZE_BIG
          font-weight: FONT_WEIGHT_BOLD
          margin-bottom: SPACE
          a
            margin-left: (SPACE / 2)
        .icon
          display: inline-block
          margin: 0 SPACE
          width: SIZE = 2.25rem
          height: SIZE
          font-size: SIZE
          color: WHITE
          opacity: 0.75
          transition all ANIMATION_DURATION ANIMATION_EASE
          &:hover
            opacity: 1
            transform: scale(1.25)
          &.tapquo
            background-image: url("/img/logo_tapquo.png")
            background-size: cover

        .more
          position: absolute
          bottom: 0
          left: 0
          right: 0
          font-weight: FONT_WEIGHT_NORMAL
          transition all (2 * ANIMATION_DURATION) ANIMATION_EASE
          opacity: 0.5
          &.hide
            opacity: 0

    &.bck.green
      h3
        font-weight: FONT_WEIGHT_NORMAL
        color: rgba(0,0,0,0.2) !important

    nav.list
      > a
        display: block
        margin: (SPACE) 0
        opacity: 0.85
        span
          vertical-align: middle
          margin: 0 (SPACE / 2) (SPACE / 2) (SPACE / 2)
          padding: (SPACE / 8) (SPACE / 4)
          font-size: (FONT_SIZE_TINY / 1.4)
          font-weight: FONT_WEIGHT_BOLD
          border: solid .15rem rgba(255,255,255,0.75)
          border-radius: .25rem



  > nav
    padding: (UNIT / 1.5) 0
    > a
      display: inline-block
      width: 50%
      font-size: FONT_SIZE_BIG
      span
        margin: 0 (SPACE / 2.5)
        font-style: italic
