body
  > section
    &.landing
      background-image: url("/assets/img/background.jpg")
      background-size: cover !important
      background-opacity: 0.5
      background-position: 0 100%
      color: WHITE
      &:not(.scroll)
        -webkit-filter: grayscale(66%)
        -moz-filter: grayscale(66%)
        -ms-filter: grayscale(66%)
        -o-filter: grayscale(66%)
        filter: grayscale(66%)

      &.scroll
        figure.glass
          background-color: rgba(0,0,0,0.5)

      figure.glass
        position: absolute
        left: 0
        width: 100%
        height: 100%
        background-color: rgba(0,0,0,0.0)
        transition background (3 * ANIMATION_DURATION) ANIMATION_EASE

      .wrapper
        padding: 0
        display: -webkit-flex
        display: flex
        flex-direction column
        justify-content center
        align-content center
        align-items center

        h1, small, nav
          transition all (1 * ANIMATION_DURATION) ANIMATION_EASE
        h1
          margin-top: SPACE
          font-weight: FONT_WEIGHT_BOLD !important
        small
          margin-bottom: SPACE
          display: block
          font-weight: FONT_WEIGHT_BOLD
          font-size: FONT_SIZE_BIG
        .icon
          display: inline-block
          margin: 0 SPACE
          width: SIZE = 2.25rem
          height: SIZE
          font-size: SIZE
          color: WHITE
          opacity: 0.85
          transition all ANIMATION_DURATION ANIMATION_EASE
          &:hover
            opacity: 1
            transform: scale(1.25)
          &.tapquo
            background-image: url("/assets/img/logo_tapquo.png")
            background-size: cover

        .more
          position: absolute
          bottom: 0
          left: 0
          right: 0
          font-weight: FONT_WEIGHT_NORMAL
          transition all (2 * ANIMATION_DURATION) ANIMATION_EASE
          opacity: 0.6
          &.hide
            opacity: 0

        &.hide
          h1, small, nav
            opacity: 0
            transform scale(0.9)

    &.bck.theme
      h3
        font-weight: FONT_WEIGHT_NORMAL
        color: rgba(0,0,0,0.2) !important

    nav.list
      > a
        display: block
        margin: (SPACE) 0
        opacity: 0.85
        span
          margin-left: (SPACE / 2)
          padding: (SPACE / 6) (SPACE / 4) 0 (SPACE / 4)
          font-size: SIZE = (FONT_SIZE_TINY / 1.25)
          font-weight: FONT_WEIGHT_BOLD
          text-transform: uppercase
          vertical-align: middle
          border-radius: .25rem
          opacity: 0.9
        &:hover
          opacity: 1


    &.bck.theme nav.list > a
      span
        background-color: rgba(255,255,255,0.5)
        color: THEME
      &:hover span
        background-color: WHITE

    &.bck.dark nav.list > a
      span
        background-color: rgba(0,0,0,0.25)
        color: WHITE
      &:hover span
        background-color: THEME
